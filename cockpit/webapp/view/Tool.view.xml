<mvc:View controllerName="aaic.cockpit.controller.Tool"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m">
    <f:DynamicPage id="_IDToolDynamicPage" showFooter="true">
        <f:title>
            <f:DynamicPageTitle id="_IDToolDynamicPageTitle">
                <f:heading>
                    <Title id="_IDToolTitle" text="{i18n>tool}"/>
                </f:heading>
                <f:breadcrumbs>
                    <Breadcrumbs id="_IDToolBreadcrumbs" currentLocationText="{i18n>tool}">
                        <Link id="_IDToolLinkHome" text="{i18n>home}" press=".onNavBackMaster('RouteMain')"/>
                        <Link id="_IDToolLinkTools" text="{i18n>tools}" press=".onNavBackMaster('RouteTools')"/>
                    </Breadcrumbs>
                </f:breadcrumbs>
                <f:actions>
                    <Button id="_IDToolButtonEdit" class="sapUiTinyMarginEnd" type="Default" icon="sap-icon://edit" text="{i18n>edit}" press=".onToogleEdit"/>
                    <Button id="_IDToolButtonSave" class="sapUiTinyMarginEnd" type="Emphasized" icon="sap-icon://save" text="{i18n>save}" enabled="false" press=".onSave"/>
                </f:actions>
                <f:navigationActions>
                    <Button
                        id="_IDToolNavBack"
                        icon="sap-icon://nav-back"
                        type="Transparent"
                        text="{i18n>tools}" 
                        press=".onNavBackMaster('RouteTools')"/>
                    <Button
                        id="_IDToolNavHome"
                        icon="sap-icon://home"
                        tooltip="{i18n>home}"
                        type="Transparent" 
                        press=".onNavBackMaster('RouteMain')"/>    
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
            <Panel id="_IDToolModelsPanel" width="auto" headerText="{i18n>toolInfo}" class="sapUiResponsiveMargin" expandable="false">
                <content>
                    <form:Form id="_IDToolForm" editable="true">
                        <form:layout>
                            <form:ColumnLayout id="_IDToolColumnLayout" 
                                columnsM="1"
                                columnsL="3"
                                columnsXL="3"
                            />
                        </form:layout>
                        <form:formContainers>
                            <form:FormContainer id="_IDToolFormContainer">
                                <form:formElements>
                                    <form:FormElement id="_IDToolFormElementClassName" label="{i18n>className}">
                                        <form:fields>
                                            <Input
                                                id="_IDToolClassNameInput"
                                                type="Text"
                                                editable="false"
                                                value="{tools>className}">
                                            </Input>
                                        </form:fields>
                                    </form:FormElement>
                                    <form:FormElement id="_IDToolFormElementMethodName" label="{i18n>methodName}">
                                        <form:fields>
                                            <Input
                                                id="_IDToolMethodNameInput"
                                                type="Text"
                                                editable="false"
                                                value="{tools>methodName}">
                                            </Input>
                                        </form:fields>
                                    </form:FormElement>
                                    <form:FormElement id="_IDToolFormElementProxyClass" label="{i18n>proxyClass}">
                                        <form:fields>
                                            <Input
                                                id="_IDToolProxyClassInput"
                                                type="Text"
                                                editable="false"
                                                value="{tools>proxyClass}">
                                            </Input>
                                        </form:fields>
                                    </form:FormElement>
                                    <form:FormElement id="_IDToolFormElementToolDescription" label="{i18n>toolDescription}">
                                        <form:fields>
                                            <Input
                                                id="_IDToolToolDescriptionInput"
                                                type="Text"
                                                editable="false"
                                                value="{tools>description}">
                                            </Input>
                                        </form:fields>
                                    </form:FormElement>
                                </form:formElements>
                            </form:FormContainer>
                        </form:formContainers>
                    </form:Form>
                </content>
	        </Panel>
        </f:content>
        <f:footer>
			<OverflowToolbar id="_IDToolPageFooter" class="sapUiSmallMarginBottom">
                <Button id="_IDToolMessagePopoverButton"
					icon="sap-icon://alert"
					text="{=${message>/}.length}"
					visible="{=${message>/}.length > 0}"
					type="Transparent"
					press=".onMessagePopoverPress"/>
                <ToolbarSpacer id="_IDToolToolbarSpacerBegin"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>