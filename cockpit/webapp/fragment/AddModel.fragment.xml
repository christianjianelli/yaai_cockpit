<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified">
	<Dialog
		id="_IDAddModelDialog"
		title="{i18n>addModel}"
		class="sapUiContentPadding">
		<content>
			<l:VerticalLayout id="_IDAddModelVerticalLayout">
				<Label 
					id="_IDAddModelLabel" 
					labelFor="_IDAddModelInput" 
					text="{i18n>model}">
				</Label>
				<Input
					id="_IDAddModelInput"
					type="Text"
					width="20em"
					editable="true">
				</Input>
			</l:VerticalLayout>
		</content>
		<buttons>        
            <Button id="_IDAddModelButtonAdd" press=".onAddModel" text="{i18n>add}"/>
			<Button id="_IDAddModelButtonCancel" press=".onCloseDialog" text="{i18n>cancel}"/>
        </buttons>
	</Dialog>
</core:FragmentDefinition>