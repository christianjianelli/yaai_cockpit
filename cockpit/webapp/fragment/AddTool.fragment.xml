<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified">
	<Dialog
		id="_IDAddToolDialog"
		title="{i18n>addModel}"
		class="sapUiContentPadding">
		<content>
			<l:VerticalLayout id="_IDAddToolVerticalLayout">
				<Label 
					id="_IDAddToolLabelClassName" 
					labelFor="_IDAddToolInputClassName" 
					text="{i18n>className}">
				</Label>
				<Input
					id="_IDAddToolInputClassName"
					type="Text"
					width="20em"
					editable="true"
					required="true">
				</Input>
				<Label 
					id="_IDAddToolLabelMethodName" 
					class="sapUiSmallMarginTop"
					labelFor="_IDAddToolInputMethodName" 
					text="{i18n>methodName}">
				</Label>
				<Input
					id="_IDAddToolInputMethodName"
					type="Text"
					width="20em"
					editable="true"
					required="true">
				</Input>
				<Label 
					id="_IDAddToolLabelProxyClass" 
					class="sapUiSmallMarginTop"
					labelFor="_IDAddToolInputProxyClass" 
					text="{i18n>proxyClass}">
				</Label>
				<Input
					id="_IDAddToolInputProxyClass"
					type="Text"
					width="20em"
					editable="true">
				</Input>
				<Label 
					id="_IDAddToolLabelDescription" 
					class="sapUiSmallMarginTop"
					labelFor="_IDAddToolInputDescription" 
					text="{i18n>description}">
				</Label>
				<Input
					id="_IDAddToolInputDescription"
					type="Text"
					width="20em"
					editable="true"
					required="true">
				</Input>
			</l:VerticalLayout>
		</content>
		<buttons>        
            <Button id="_IDAddToolButtonAdd" press=".onAddTool" text="{i18n>add}"/>
			<Button id="_IDAddToolButtonCancel" press=".onCloseDialog" text="{i18n>cancel}"/>
        </buttons>
	</Dialog>
</core:FragmentDefinition>