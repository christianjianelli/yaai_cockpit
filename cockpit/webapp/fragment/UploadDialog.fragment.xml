<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified">
	<Dialog
		id="_IDUploadDialog"
		title="{i18n>uploadDocument}"
		class="sapUiContentPadding">
		<content>
			<l:VerticalLayout id="_IDUploadVerticalLayout">
				<Label 
					id="_IDUploadDescriptionLabel" 
					labelFor="_IDUploadDescriptionInput" 
					text="{i18n>description}">
				</Label>
				<Input
					id="_IDUploadDescriptionInput"
					type="Text"
					editable="true">
				</Input>
				<Label 
					id="_IDUploadKeywordsLabel" 
					labelFor="_IDUploadKeywordsInput" 
					text="{i18n>keywords}">
				</Label>
				<Input
					id="_IDUploadKeywordsInput"
					type="Text"
					editable="true">
				</Input>
				<Label 
					id="_IDUploadFileUploaderLabel" 
					labelFor="_IDUploadFileUploader" 
					text="{i18n>file}">
				</Label>
				<u:FileUploader
					id="_IDUploadFileUploader"
					name="fileUploader"
					fileType="md"
					change=".handleFileChange"
					typeMissmatch=".handleFileTypeMissmatch"/>
				<Button id="_IDUploadButtonUpload"
					text="{i18n>upload}"
					press=".handleUploadPress"/>
			</l:VerticalLayout>
		</content>
		<buttons>        
            <Button id="_IDUploadButtonCancel" press=".onCloseDialog" text="{i18n>cancel}"/>
        </buttons>
	</Dialog>
</core:FragmentDefinition>