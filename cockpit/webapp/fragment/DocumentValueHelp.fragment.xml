<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog id="_IDDocumentValueHelpSelectDialog"
		noDataText="No Documents Found"
		title="Select Document"
		search=".onSearchDocument"
		searchPlaceholder="Search Documents"
		confirm=".onDocumentValueHelpDialogClose"
		cancel=".onDocumentValueHelpDialogClose"
		showClearButton="true"
		items="{
			path: 'rag>/documents',
			sorter: {
				path: 'filename',
				descending: false
			}
		}">
		<StandardListItem id="_IDDocumentValueHelpStandardListItem"
			title="{rag>filename}"
			description="{rag>description}"
			type="Active" />
	</SelectDialog>
</core:FragmentDefinition>