<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified">
	<Dialog
		id="_IDAddAgentDialog"
		title="{i18n>addAgent}"
		class="sapUiContentPadding">
		<content>
			<l:VerticalLayout id="_IDAddAgentVerticalLayout">
				<Label 
					id="_IDAddAgentLabelClassName" 
					labelFor="_IDAddAgentInputName" 
					text="{i18n>name}">
				</Label>
				<Input
					id="_IDAddAgentInputName"
					type="Text"
					width="20em"
					editable="true"
					required="true">
				</Input>
				<Label 
					id="_IDAddAgentLabelDescription" 
					class="sapUiSmallMarginTop"
					labelFor="_IDAddAgentInputDescription" 
					text="{i18n>description}">
				</Label>
				<Input
					id="_IDAddAgentInputDescription"
					type="Text"
					width="20em"
					editable="true"
					required="true">
				</Input>
			</l:VerticalLayout>
		</content>
		<buttons>        
            <Button id="_IDAddAgentButtonAdd" press=".onAddAgent" text="{i18n>add}"/>
			<Button id="_IDAddAgentButtonCancel" press=".onCloseDialog" text="{i18n>cancel}"/>
        </buttons>
	</Dialog>
</core:FragmentDefinition>